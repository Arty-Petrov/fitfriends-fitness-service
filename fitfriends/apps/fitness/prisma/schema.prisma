// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/fitfriends-fitness"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gyms {
  id          Int      @id @default(autoincrement())
  title       String
  location    String
  isVerified  Boolean
  features    String[]
  photos      String[]
  description String
  price       Float
  createdAt   DateTime @default(now())
}

model Orders {
  id            Int      @id @default(autoincrement())
  authorId      String
  productType   String
  productId     Int
  productPrice  Int
  quantity      Int
  totalPrice    Float
  paymentMethod String
  createdAt     DateTime @default(now())
}

model Reviews {
  id         Int       @id @default(autoincrement())
  authorId   String
  trainingId Int
  training   Trainings @relation(fields: [trainingId], references: [id])
  text       String
  evaluation Int
  createdAt  DateTime  @default(now())
}

model Trainings {
  id             Int       @id @default(autoincrement())
  title          String
  image          String
  experience     String
  type           String
  duration       String
  price          Int
  caloriesLoss   Int
  description    String
  gender         String
  video          String
  authorId       String
  isSpecialOffer Boolean
  reviews        Reviews[]
  createdAt      DateTime  @default(now())
}
