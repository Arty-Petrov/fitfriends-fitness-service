// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FavoriteGym {
  fanId     String   @id @unique
  gyms      Gym[]
  createdAt DateTime @default(now())
}

model Gym {
  id           Int           @id @default(autoincrement())
  title        String
  location     String
  isVerified   Boolean       @default(false)
  features     String[]
  photos       String[]
  description  String
  price        Float
  createdAt    DateTime      @default(now())
  favoriteGyms FavoriteGym[]
}

model Order {
  id            Int      @id @default(autoincrement())
  authorId      String
  productType   String
  productId     Int
  productPrice  Int
  quantity      Int
  totalPrice    Float
  paymentMethod String
  createdAt     DateTime @default(now())
}

model Review {
  id         Int      @id @default(autoincrement())
  authorId   String
  trainingId Int
  training   Training @relation(fields: [trainingId], references: [id])
  text       String
  evaluation Int
  createdAt  DateTime @default(now())
}

model Training {
  id             Int      @id @default(autoincrement())
  title          String
  image          String
  experience     String
  type           String
  duration       String
  price          Int
  caloriesLoss   Int
  description    String
  gender         String
  video          String
  authorId       String
  isSpecialOffer Boolean
  reviews        Review[]
  rating         Float?
  createdAt      DateTime @default(now())
}
